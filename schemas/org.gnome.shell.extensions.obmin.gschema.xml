<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions-obmin-daemon">

  <schema id="org.gnome.shell.extensions.obmin" path="/org/gnome/shell/extensions/obmin/">

    <key type="b" name="startup-settings">
      <default>false</default>
      <summary>>Load on startup</summary>
      <description>Load the server on startup</description>
    </key>

    <key type="b" name="first-run">
      <default>true</default>
      <summary>>First run</summary>
      <description>First run indicator</description>
    </key>

    <key type="i" name="port">
      <default>8088</default>
      <summary>Port number</summary>
      <description>Server port</description>
    </key>

    <key type="b" name="links-settings">
      <default>true</default>
      <summary>Follow links</summary>
      <description>Follow to symbolic links</description>
    </key>

    <key type="b" name="hidden-settings">
      <default>false</default>
      <summary>Show hidden</summary>
      <description>Show hidden locations</description>
    </key>

    <key type="b" name="backup-settings">
      <default>false</default>
      <summary>Show backups</summary>
      <description>Show backup sources</description>
    </key>

    <key type="b" name="mounts-settings">
      <default>true</default>
      <summary>Show mounts</summary>
      <description>Show mount points</description>
    </key>

    <key type="s" name="content-sources">
        <default>''</default>
        <summary>Content locations</summary>
        <description>Server content locations</description>
    </key>

    <key type="s" name="recent-files">
        <default>''</default>
        <summary>Recent locations</summary>
        <description>Recent locations</description>
    </key>

    <key type="b" name="contest">
      <default>true</default>
      <summary>Popularity Contest</summary>
      <description>(enable - default/disable)</description>
    </key>

    <key type="s" name="excluded-files">
        <default>''</default>
        <summary>Excluded locations</summary>
        <description>Excluded locations</description>
    </key>

    <key type="i" name="debug">
      <default>1</default>
      <summary>Debug level</summary>
      <description>Debug level (0-error,1-info,2-debug)</description>
    </key>

    <key type="i" name="server-mode">
      <default>0</default>
      <summary>Server mode</summary>
      <description>Server behavior (0-file,1-mix,2-web)</description>
    </key>

    <key type="b" name="notify">
      <default>true</default>
      <summary>Notify</summary>
      <description>Notify about new connections</description>
    </key>

    <key type="b" name="logging">
      <default>true</default>
      <summary>Log requests</summary>
      <description>Log connection requests</description>
    </key>

    <key type="i" name="log-size">
      <default>0</default>
      <summary>Log size</summary>
      <description>Log file size (MiB)</description>
    </key>

    <key type="s" name="theme">
        <default>'default'</default>
        <summary>Content theme</summary>
        <description>Last selected theme</description>
    </key>

    <key type="i" name="support">
      <default>0</default>
      <summary>Support level</summary>
      <description>Support level (0-full,1-part,2-none)</description>
    </key>

    <key type="i" name="status">
      <default>5</default>
      <summary>Applets running status monitor</summary>
      <description>(0 - disable, 5 seconds default)</description>
    </key>

    <key type="b" name="stats-monitor">
      <default>true</default>
      <summary>Update server stats</summary>
      <description>(enable - default/disable)</description>
    </key>

    <key type="s" name="stats">
        <default>'{"access":0,"ready":0,"upload":0}'</default>
        <summary>Data</summary>
        <description>Server stats data</description>
    </key>

    <key type="s" name="theme-gui">
        <default>'default'</default>
        <summary>GUI theme</summary>
        <description>Theme name</description>
    </key>

    <key type="s" name="user-id">
        <default>''</default>
        <summary>UUID</summary>
        <description>Unique User ID</description>
    </key>

  </schema>
</schemalist>
